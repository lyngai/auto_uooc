{
  "manifest_version": 2,
  "name": "Auto UOOC",
  "version": "1.0.0",
  // "default_locale": "en",
  "description": "自动刷慕课ヾ(･ω･`｡)",
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png"
  },
  "page_action": {
    "default_icons": {
      "16": "icon/16.png",
      "24": "icon/24.png",
      "32": "icon/32.png",
      "48": "icon/48.png"
    },
    "default_popup": "popups/default_popup.html"
  },

  "background": {
    "scripts": ["webRequestMonitor.js", "background.js"]
    // Recommended
    // "persistent": false
    // Optional
    // "service_worker_script": ""
  },

  "content_scripts": [
    {
      // "all_frames": true,
      "matches": ["*://www.uooc.net.cn/home"],
      "js": ["inject-content.js"],
      "run_at": "document_end"
    },
    {
      // "all_frames": true,
      "matches": ["*://www.uooc.net.cn/home/learn/index"],
      "js": ["inject-content-learn.js"],
      "css": ["styles/learn-progress.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "script.js",
    "scripts/learn.js"
  ],
  
  "permissions": [
    "tabs",
    "declarativeContent",
    "cookies",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "http://*.uooc.net.cn/*"
  ]
}
